<h1>New post</h1>

<% form_for(@post, :url=>{:controller=>'admin', :action=>'create_post'}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.collection_select(:category_id, @categories, :id, :name, {:prompt => true}) %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>
